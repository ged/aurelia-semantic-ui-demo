# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation
[**.*]
indent_style = tab
indent_size = 4

[**.html]
indent_style = tab
indent_size = 2

# Space indentation for text files
[**.{md,txt,json}]
indent_style = space
indent_size = 2

